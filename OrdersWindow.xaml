<Window x:Class="Osnaska.OrdersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        xmlns:local="clr-namespace:Osnaska"
      
   
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      
xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Home" Height="580" Width="800" WindowStartupLocation="CenterScreen">
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Resources/Back.png" 
                Stretch="None"/>
        </Border.Background>

        <Border CornerRadius="10"                    
            BorderThickness="2"
            Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>


            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto">

                    </RowDefinition>
                    <RowDefinition Height="2*">

                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*">
                    </ColumnDefinition>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <Grid  Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>

                    <Grid>
                        




                        <Border Grid.Column="1" Margin="10,5,-528,0"  >
                            <materialDesign:ColorZone
                            Margin="0"  
                            Padding="10 5"
                            Panel.ZIndex="1"
                            materialDesign:ElevationAssist.Elevation="Dp2"
                            CornerRadius="2"
                            Mode="Standard" Height="44">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBox Text="{Binding FindText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                       
                                        Grid.Column="1"
                                        MinWidth="200"
                                        Margin="8,0,0,0"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="Build a search bar"
                                        materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                        BorderThickness="0" >
                                        <TextBox.InputBindings >
                                            <KeyBinding Command="{Binding LoadDataa}" Key="Return"/>
                                        </TextBox.InputBindings>

                                    </TextBox>
                                    <Button Command="{Binding BtnOpenFilter}"
                                        Grid.Column="2">
                                        <materialDesign:PackIcon
                                          Margin="0,0,0,0"
                                          Kind="Filter"
                                          Opacity=".56" />
                                    </Button>
                                </Grid>
                            </materialDesign:ColorZone>
                        </Border>
                    </Grid>

                    <Grid Margin="0,10,-528,10" Grid.Row="1">
                        <ListBox  Margin="0,0,0,0" Background="White" ItemsSource="{Binding ListH}"  SnapsToDevicePixels="True"  VirtualizingPanel.ScrollUnit="Pixel">
                            <i:Interaction.Triggers>
                                <i:EventTrigger  EventName="Loaded">
                                    <i:InvokeCommandAction Command="{Binding LoadDataa}">

                                    </i:InvokeCommandAction>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel SnapsToDevicePixels="True" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.ScrollUnit="Pixel"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border>
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown" >
                                                <i:InvokeCommandAction Command="{Binding DataContext.BtnSelectChat, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding }"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>

                                        <Grid Height="50"  Background="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="4*"/>
                                            </Grid.ColumnDefinitions>

                                            <materialDesign:Card UniformCornerRadius="29">
                                                <materialDesign:PackIcon Kind="{Binding Avatar}" Width="48" Height="49" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                            </materialDesign:Card>

                                            <Grid Grid.Column="1" Margin="10 0 10 0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="1*"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Text="{Binding  NamePro}" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="0" FontFamily="Segoe UI Black" FontWeight="Bold"/>
                                                <TextBlock   Grid.Row="1" TextWrapping="Wrap" Text="{Binding Text}"  VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0">

                                                </TextBlock>

                                            </Grid>
                                        </Grid>
                                    </Border>

                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>


                        <Button Command="{Binding BtnClc}" 
                            VerticalAlignment="Bottom" Margin="15" 
                            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"   FontSize="15" HorizontalAlignment="Right" >
                            <Button.Background>
                                <SolidColorBrush Color="Black" Opacity="0.15"/>
                            </Button.Background>
                            <Button.Content>
                                <materialDesign:PackIcon Kind="PlusBold" Height="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Button.Content>

                        </Button>
                    </Grid>


                </Grid>

                <Grid Grid.Column="1" Grid.Row="1">

                    <ContentControl Content="{Binding Navig.CurrentItem}" />

                </Grid>
                <Menu Grid.ColumnSpan="2" Background="DarkBlue">
                    <MenuItem Header="Проекты"  Background="Blue" Foreground="White" >
                        <MenuItem
                        Visibility="{Binding VisibleCountSign, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                          Command="{Binding BtnOpenoper}"
                          Icon="{materialDesign:PackIcon Kind=AlertOctagonOutline}" >
                            <MenuItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" TextAlignment="Center">
                                    <Run Text="Проекты для согласования"/>
                                    </TextBlock>
                                    <Border Margin="5 2" Padding="10 5" CornerRadius="12" Background="OrangeRed">
                                        <TextBlock Text="{Binding SignCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </Border>
                                </StackPanel>
                            </MenuItem.Header>
                        </MenuItem>
                    </MenuItem>
                    <MenuItem Header="Документы"  Background="Blue" Foreground="White"/>
                </Menu>
            </Grid>
        </Border>

    </Border>
</Window>

 


